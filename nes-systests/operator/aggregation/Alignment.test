SINK alignmentStream UINT64 fast_streamslow_stream$start UINT64 fast_streamslow_stream$end VARSIZED fast_stream$fast_text VARSIZED slow_stream$slow_text

SELECT start, end, fast_text, slow_text
FROM (
    SELECT *
    FROM(
        SELECT fast_text, end as ts, ots FROM(
            SELECT LAST(text) as fast_text, LAST(ts) as ots
            FROM fast_stream WINDOW TUMBLING(ts, size 10 ms)
        ))
        INNER JOIN
        (
            SELECT LAST(text) as slow_text, LAST(ts) as ots
            FROM slow_stream WINDOW TUMBLING(ts, size 10 ms)
        )
        ON ts = end WINDOW TUMBLING (ots, size 10 ms)
)
INTO alignmentStream;
