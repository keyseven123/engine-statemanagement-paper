FROM nebulastream/nes-build-image:latest

RUN DEBIAN_FRONTEND="noninteractive" apt-get update -qq && apt-get install -qq \
  rsync \
  tmux \
  ssh \
  vim \
  gdb \
&& apt-get clean -qq

RUN service ssh start && useradd -m nes && yes password | passwd nes

EXPOSE 22

CMD ["/usr/sbin/sshd", "-D"]

ADD entrypoint-nes-dev.sh /entrypoint.sh
ENTRYPOINT ["/entrypoint.sh"]
