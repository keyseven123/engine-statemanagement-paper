###
### General configuration
###
logLevel: {{ log_level }}
optimizer:
  distributedWindowChildThreshold: 3

###
### Network configuration
###
restIp: {{ default_coordinator_ip }}
coordinatorIp: {{ default_coordinator_ip }}

# Set port exposed for REST endpoints
restPort: {{ default_coordinator_ports[0] }}
# Set RPC server port of NES Coordinator
rpcPort: {{ default_coordinator_ports[1] }}
# Set the data port of the network manager
dataPort: {{ default_coordinator_ports[2] }}

###
### Logical source configuration
###
logicalSources:
  - logicalSourceName: "wind_turbines"
    fields:
      - name: type
        type: CHAR
        length: 50
      - name: metadata_generated
        type: UINT64
      - name: metadata_title
        type: CHAR
        length: 50
      - name: metadata_id
        type: CHAR
        length: 50
      - name: features_type
        type: CHAR
        length: 50
      - name: features_properties_capacity
        type: UINT64
      - name: features_properties_efficiency
        type: FLOAT32
      - name: features_properties_mag
        type: FLOAT32
      - name: features_properties_time
        type: UINT64
      - name: features_properties_updated
        type: UINT64
      - name: features_properties_type
        type: CHAR
        length: 50
      - name: features_geometry_type
        type: CHAR
        length: 50
      - name: features_geometry_coordinates_longitude
        type: FLOAT32
      - name: features_geometry_coordinates_latitude
        type: FLOAT32
      - name: features_eventId
        type: CHAR
        length: 50